#!/bin/bash

#
if [ $# -ne 1 ]; then
        echo "Usage: $0 EMAIL_ADDRESS"
        exit 1
fi

TIME=`date +"%Y_%m_%d_%H-%M"`
cd /var/www/html/videos
DATE=`date`
FILENAME="$TIME"_video.mp4

arecord -d 10 /var/www/html/sounds/sound.wav& ffmpeg -f v4l2 -framerate 25 -video_size 640x480 -t 10 -i /dev/video0 /var/www/html/videos/video.mkv

ffmpeg -i /var/www/html/videos/video.mkv -i /var/www/html/sounds/sound.wav -c copy /var/www/html/videos/video_sound.mkv

ffmpeg -i /var/www/html/videos/video_sound.mkv /var/www/html/videos/$FILENAME

rm /var/www/html/videos/video.mkv
rm /var/www/html/sounds/sound.wav
rm /var/www/html/videos/video_sound.mkv

FILE=`ls -l $FILENAME`

echo "Sending a copy of" > message.txt

echo "$FILE" >> message.txt

echo "to $2 at $DATE" >> message.txt

SUBJECT="Video From ClaireVOijant at $DATE"

cat /tmp/message.txt | mutt -s "$SUBJECT" $1 -a $FILENAME
