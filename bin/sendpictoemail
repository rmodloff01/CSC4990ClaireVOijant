#!/bin/bash

#
if [ $# -ne 2 ]; then
        echo "Usage: $0 EMAIL_ADDRESS UNIQUE_PICTURE"
        exit 1
fi

EMAIL_ADDRESS=$1
UNIQUE_PICTURE=$2
DATE=`date`
cd /var/www/html/claire/app/assets/images/pictures

#FILE=`ls -l $UNIQUE_PICTURE`
echo "Sending a copy of $UNIQUE_PICTURE" > /tmp/message.txt
#echo "Sending a copy of" | sudo festival --tts
echo "/var/www/html/claire/app/assets/images/pictures/$UNIQUE_PICTURE" >> /tmp/message.txt
#echo "$UNIQUE_PICTURE" | sudo festival --tts
echo "to $EMAIL_ADDRESS at $DATE" >> /tmp/message.txt
#echo "to $2 at $DATE" | sudo festival --tts

SUBJECT="Picture From ClaireVOijant at $DATE"

cat /tmp/message.txt | mutt -s "$SUBJECT" $EMAIL_ADDRESS -a $UNIQUE_PICTURE

